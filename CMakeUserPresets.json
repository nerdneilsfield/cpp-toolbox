{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-common",
      "hidden": true,
      "inherits": ["dev-mode", "clang-tidy", "cppcheck"],
      "cacheVariables": {
        "BUILD_MCSS_DOCS": "ON",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": ["dev-common", "flags-gcc-clang", "ci-std"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_BENCHMARKS": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "dev-darwin",
      "binaryDir": "${sourceDir}/build/dev-darwin",
      "inherits": ["dev-common", "ci-darwin"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_BENCHMARKS": "ON",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "15.4",
        "CMAKE_OSX_SYSROOT": "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang"
      },
      "generator": "Xcode"
    },
    {
      "name": "dev-win64",
      "binaryDir": "${sourceDir}/build/dev-win64",
      "inherits": ["dev-common", "ci-win64"],
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-linux"
    },
    {
      "name": "dev-coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": ["dev-mode", "coverage-linux"]
    },
    {
      "name": "dev-linux-clang",
      "binaryDir": "${sourceDir}/build/dev-linux-clang",
      "inherits": ["dev-linux"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++-21",
        "CMAKE_C_COMPILER": "clang-21",
        "CMAKE_LINKER": "lld"
      }
    },
    {
      "name": "dev-linux-musl",
      "binaryDir": "${sourceDir}/build/dev-linux-musl",
      "inherits": ["ci-linux", "flags-gcc-clang"],
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_COMPILER": "clang++-21",
        "CMAKE_C_COMPILER": "clang-21",
        "CMAKE_LINKER": "musl-lld",
        "CMAKE_C_COMPILER_TARGET": "x86_64-linux-musl",
        "CMAKE_CXX_COMPILER_TARGET": "x86_64-linux-musl",
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_BENCHMARKS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "jobs": 12
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 12,
        "noTestsAction": "error"
      }
    }
  ]
}
